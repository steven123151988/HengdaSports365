<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f5f5f9"
    android:orientation="vertical">


    <include layout="@layout/layout_bet_title" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:alpha="0.6"
        android:background="@color/white_ffffff"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_position_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_30"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/bill_check_state"
            android:button="@null"
            android:gravity="center"
            android:text="全部订单"
            android:textColor="@color/selector_rb_text"
            android:textSize="@dimen/sp_15" />


        <RadioButton
            android:id="@+id/rb_position_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_30"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/bill_check_state"
            android:button="@null"
            android:gravity="center"
            android:text="已中奖"
            android:textColor="@color/selector_rb_text"
            android:textSize="@dimen/sp_15" />

        <RadioButton
            android:id="@+id/rb_position_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_30"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/bill_check_state"
            android:button="@null"
            android:gravity="center"
            android:text="待开奖"
            android:textColor="@color/selector_rb_text"
            android:textSize="@dimen/sp_15" />


        <RadioButton
            android:id="@+id/rb_position_4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_30"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/bill_check_state"
            android:button="@null"
            android:gravity="center"
            android:text="已撤单"
            android:textColor="@color/selector_rb_text"
            android:textSize="@dimen/sp_15" />


    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
